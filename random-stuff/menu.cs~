using System;

namespace Multi

{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Escolha o exercício para exibir:");
            Console.WriteLine("[a] [b] [c] [d] [e]");
            string opt = Console.ReadLine();
            switch (opt)
            {
            case "a":
                Console.Clear();
                Console.WriteLine("Opção 1");
                break;
            case "b":
                Console.Clear();
                Console.WriteLine("Opção 2");
                break;
            case "c":
                Console.Clear();
                Console.WriteLine("Opção 3");
                break;
            case "d":
                Console.Clear();
                Console.WriteLine("Opção 4");
                break;
            case "e":
                Console.Clear();
                Console.WriteLine("Opção 5");
                break;
            }
        }
    }
}
